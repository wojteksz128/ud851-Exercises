<?xml version="1.0" encoding="utf-8"?>
<!-- TODO (17) Surround the Constraint layout with a ScrollView -->
<!-- DONE (2) Replace the Relative layout with a ConstraintLayout -->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- DONE (3) Create a TextView for the Passenger label and name -->
    <!-- DONE (4) Use tools:text to set the text value -->
    <TextView
        android:id="@+id/passenger_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/passenger_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <TextView
        android:id="@+id/passenger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="@string/passenger_name"
        app:layout_constraintStart_toStartOf="@+id/passenger_label"
        app:layout_constraintTop_toBottomOf="@+id/passenger_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimary"/>

    <!-- DONE (5) Create an ImageView for the left rectangle -->
    <!-- DONE (6) Set the background to the shape_rectangle_stroke drawable -->
    <ImageView
        android:id="@+id/leftRectangle"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passenger_name"
        app:srcCompat="@drawable/shape_rectangle_stroke" />

    <!-- DONE (7) Create an ImageView for the divider -->
    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/rightRectangle"
        app:layout_constraintEnd_toStartOf="@+id/rightRectangle"
        app:layout_constraintStart_toEndOf="@+id/leftRectangle"
        app:layout_constraintTop_toTopOf="@+id/rightRectangle"
        android:background="@color/colorPrimaryLight"/>

    <!-- DONE (8) Create an ImageView for the rightRectangle -->
    <ImageView
        android:id="@+id/rightRectangle"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passenger_name"
        app:srcCompat="@drawable/shape_rectangle_stroke" />

    <!-- DONE (9) Create a TextView for the origin code, the destination code and the flight code -->
    <TextView
        android:id="@+id/origin_airport_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/origin_code"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="@+id/leftRectangle"
        app:layout_constraintStart_toStartOf="@+id/leftRectangle"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/destination_airport_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/destination_code"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="@+id/rightRectangle"
        app:layout_constraintStart_toStartOf="@+id/rightRectangle"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/flight_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/rightRectangle"
        app:layout_constraintStart_toEndOf="@+id/leftRectangle"
        app:layout_constraintTop_toTopOf="@+id/divider"
        tools:text="@string/flight_code" />

    <!-- TODO (15) Import the plane image SVG file into the drawable directory and name it art_plane -->
    <!-- TODO (16) Create an ImageView for the plane and set the background to art_plane drawable -->

    <!-- DONE (10) Create a TextView for the time texts and their corresponding labels -->
    <TextView
        android:id="@+id/boarding_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/boarding_time_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftRectangle" />

    <TextView
        android:id="@+id/boarding_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/boarding_time_label"
        app:layout_constraintTop_toBottomOf="@+id/boarding_time_label"
        tools:text="@string/boarding_time" />

    <TextView
        android:id="@+id/depature_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/departure_time_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintStart_toStartOf="@+id/boarding_time"
        app:layout_constraintTop_toBottomOf="@+id/boarding_time" />

    <TextView
        android:id="@+id/depature_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorGood"
        app:layout_constraintStart_toStartOf="@+id/depature_time_label"
        app:layout_constraintTop_toBottomOf="@+id/depature_time_label"
        tools:text="@string/departure_time" />

    <TextView
        android:id="@+id/boarding_in_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/boarding_in_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leftRectangle" />

    <TextView
        android:id="@+id/boarding_in_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorBad"
        app:layout_constraintStart_toStartOf="@+id/boarding_in_time_label"
        app:layout_constraintTop_toBottomOf="@+id/boarding_in_time_label"
        tools:text="@string/boarding_in_time" />

    <TextView
        android:id="@+id/arrival_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/arrival_time_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintStart_toStartOf="@+id/boarding_in_countdown"
        app:layout_constraintTop_toBottomOf="@+id/boarding_in_countdown" />

    <TextView
        android:id="@+id/arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorGood"
        app:layout_constraintStart_toStartOf="@+id/arrival_time_label"
        app:layout_constraintTop_toBottomOf="@+id/arrival_time_label"
        tools:text="@string/arrival_time" />

    <!-- DONE (11) Create an ImageView for the blue table's header -->
    <ImageView
        android:id="@+id/table_header_image"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depature_time"
        app:layout_constraintHorizontal_bias="0.33" />

    <!-- DONE (12) Create an ImageView for the blue table's body -->
    <ImageView
        android:id="@+id/table_image"
        android:background="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_header_image"/>
        <!--app:layout_constraintBottom_toBottomOf="@+id/terminal"/>-->

    <!-- TODO (13) Create a TextView for each of the labels and text fields in the blue table -->
    <TextView
        android:id="@+id/terminal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/terminal_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/table_header_image"
        app:layout_constraintTop_toTopOf="@+id/table_header_image" />

    <!-- TODO (14) Create an ImageView for the barcode -->

</android.support.constraint.ConstraintLayout>

